<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <request-character-encoding>UTF-8</request-character-encoding>
    <servlet>
        <servlet-name>CreateCategory</servlet-name>
        <servlet-class>pdthang.assignmentwcdphamducthang.controller.category.CreateCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateCategory</servlet-name>
        <url-pattern>/admin/category/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListCategory</servlet-name>
        <servlet-class>pdthang.assignmentwcdphamducthang.controller.category.ListCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListCategory</servlet-name>
        <url-pattern>/admin/category/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CreateFood</servlet-name>
        <servlet-class>pdthang.assignmentwcdphamducthang.controller.food.CreateFoodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateFood</servlet-name>
        <url-pattern>/admin/food/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListFood</servlet-name>
        <servlet-class>pdthang.assignmentwcdphamducthang.controller.food.ListFoodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListFood</servlet-name>
        <url-pattern>/admin/food/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateFood</servlet-name>
        <servlet-class>pdthang.assignmentwcdphamducthang.controller.food.UpdateFoodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateFood</servlet-name>
        <url-pattern>/admin/food/update</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteFood</servlet-name>
        <servlet-class>pdthang.assignmentwcdphamducthang.controller.food.DeleteFoodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteFood</servlet-name>
        <url-pattern>/admin/food/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Error404</servlet-name>
        <servlet-class>pdthang.assignmentwcdphamducthang.controller.page.Error404</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Error404</servlet-name>
        <url-pattern>/error404</url-pattern>
    </servlet-mapping>
</web-app>
